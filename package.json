{
  "name": "nextjs-site-starter",
  "version": "1.0.0",
  "repository": {
    "url": "https://github.com/lsbyerley/nextjs-site-starter"
  },
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest --coverage",
    "jest": "TZ=UTC jest",
    "tcv:open": "tailwind-config-viewer -o",
    "pkg:update:check": "npm-check-updates",
    "pkg:update:install": "npm-check-updates -u; npm install",
    "cy:open-only": "cypress open",
    "cy:run-only": "cypress run",
    "cy:open": "start-server-and-test dev 3000 cy:open-only",
    "cy:run": "start-server-and-test dev 3000 cy:run-only"
  },
  "dependencies": {
    "next": "12.0.10",
    "next-themes": "0.0.15",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.5.0",
    "autoprefixer": "10.4.2",
    "babel-jest": "27.4.6",
    "cypress": "9.4.1",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.4.7",
    "node-mocks-http": "1.11.0",
    "npm-check-updates": "12.2.1",
    "postcss": "8.4.5",
    "react-test-renderer": "17.0.2",
    "start-server-and-test": "1.14.0",
    "tailwind-config-viewer": "1.6.3",
    "tailwindcss": "3.0.18"
  }
}
