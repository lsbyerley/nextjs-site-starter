{
  "name": "nextjs-site-starter",
  "version": "1.0.0",
  "repository": {
    "url": "https://github.com/lsbyerley/nextjs-site-starter"
  },
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest --coverage",
